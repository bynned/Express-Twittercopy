<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forum - Channels</title>
    <link href="/css/main.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <div class="header-link">
      <h1 class="header-title">
        <form
          action="/profile/<%= username %>"
          method="GET"
          class="my-profile-button"
        >
          <button type="submit">My profile</button>
        </form>
        <a href="/channels">
          <img src="/icons/logo.png" alt="Logo" class="logo-image" />
        </a>
        <form
          action="/logout?_method=DELETE"
          method="POST"
          class="log-out-button"
        >
          <button type="submit">Log Out</button>
        </form>
      </h1>
    </div>
    <div class="App" id="Appid">
      <div class="channel-header">
        <h1>Channels</h1>
        <button id="createChannelButton">Create Channel</button>
        <button id="enterChannelKeyButton">Enter Channel Key</button>
      </div>
      <div id="createChannelFormContainer">
        <form id="createChannelForm" action="/channels" method="POST">
          <input
            type="text"
            name="channelName"
            placeholder="Enter Channel Name"
          />
          <input
            type="text"
            name="channelKey"
            placeholder="Create channel key"
          />
          <button type="submit">Create</button>
        </form>
      </div>
      <div id="enterChannelKeyContainer">
        <form id="enterChannelKey" action="/join-channel" method="POST">
          <input
          type="text"
          name="enterChannelKey"
          placeholder="Enter Channel Key"
          />
          <button type="submit">Enter</button>
        </form>
      </div>
      <div>
        <% channels.forEach((channel) => { %>
          <div class="channel-container">
            <a href="/channels/<%= channel.id %>" class="channel-link">
              <h1><%= channel.name %></h1>
            </a>
          </div>
          <% }); %>
      </div>
    </div>
    <script src="/scripts/channelView.js"></script>
  </body>
</html>
