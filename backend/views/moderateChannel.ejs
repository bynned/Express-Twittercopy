<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/main.css" rel="stylesheet" type="text/css" />
    <title>HushHub Moderate</title>
  </head>
  <body>
    <div class="App-userpage" id="Appid">
      <h1>Moderate: <%= channelName %></h1>
      <div class="user-content">
        <div class="posts">
          <h2>Flagged Posts:</h2>
          <% flaggedPosts.forEach((post) => { %>
          <div class="post">
            <h3><%= post.title %></h3>
            <div class="post-content">
              <p><%= post.content %></p>
              <div class="post-stats">
                <a href="/post/<%= post._id %>"><button>Open Post</button></a>
                <p>Flagged by: <%= post.flagged.length %> people</p>
                <form action="/channels/<%= post._id %>/clear-flags" method="POST">
                  <input type="hidden" name="postId" value="<%= post._id %>" />
                  <input type="hidden" name="channelId" value="<%= channelId %>" />
                  <button type="submit">Clear flags</button>
                </form>
                <form>
                  <button type="submit" class="delete-channel-button">Delete post</button>
                </form>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
        <div class="user-channels">
          <h2>Flagged Comments:</h2>
          <% flaggedComments.forEach((comment) => { %>
           <% comment.comments.forEach((com) => { %>
             <% if (com.comflagged.length > 0) { %>
                <div class="post">
                  <div class="post-content">
                    <p><%= com.content %></p>
                    <div class="post-stats">
                      <a href="/post/<%= comment._id %>">
                        <button>Open Post</button>
                      </a>
                      <p>Flagged by: <%= com.comflagged.length %> people</p>
                      <form action="/channels/<%= comment._id %>/comments/<%= com._id %>/clear-flags" method="POST">
                        <input type="hidden" name="commentId" value="<%= com._id %>" />
                        <input type="hidden" name="postId" value="<%= comment._id %>" />
                        <input type="hidden" name="channelId" value="<%= channelId %>" />
                        <button type="submit">Clear flags</button>
                      </form>
                      <form>
                        <button type="submit" class="delete-channel-button">Delete comment</button>
                      </form>
                    </div>
                  </div>
                </div>
          <% } }); }); %>
        </div>        
      </div>
    </div>

    <script>
      window.addEventListener("load", function () {
        var div = document.getElementById("Appid");
        div.classList.add("appear");
      });
    </script>
  </body>
</html>
